x=63 y=63

function _update()
	if (btn(0)) then x=(x-1)%128 end
	if (btn(1)) then x=(x+1)%128 end
	if (btn(2)) then y=(y-1)%128 end
	if (btn(3)) then y=(y+1)%128 end	
end


facing = 'left'

function _draw()
	palt(13,true)
	palt(0,false)	
	--rectfill(0,0,127,127,3)
	map(0,0,0,0,16,8)
	map(0,0,0,64,16,8)
	if (btn(1) or facing=='right') then facing = 'right'
		for i=4,1,-1 do 
			spr(i,	
				(x+(3-i)*8)%128,
				y%128,1,1,true)
		end 
