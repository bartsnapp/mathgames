			spr(i,
				(x+(35-i)*8)%128,
				(y+16)%128,1,1,true)
		end
		for i=52,49,-1 do
			spr(i,
				(x+(51-i)*8)%128,
				(y+24)%128,1,1,true)
		end
	end
	if (btn(0) or facing=='left') then facing = 'left'
		--if (x%2==1) 
