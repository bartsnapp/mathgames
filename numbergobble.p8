actor={} -- actors in the game

function make_actor(x, y)
 a={}
 a.x = x
 a.y = y
 a.dx = 0
 a.dy = 0
 a.spr = 16
 a.ncirc = false -- number circke
 a.number = 2
 a.draw = 0--cprint()
 a.frame = 0
 a.t = 0
 a.inertia = 0.6
 a.bounce  = 1
 a.frames=2
 
 -- half-width and half-height
 -- slightly less than 0.5 so
 -- that will fit through 1-wide
 -- holes.
 a.r = 0.4 -- radius of object
  
 add(actor,a)
 
 return a
end
