-- circled printings	
function cprint(s,x,y,c1,c2) 
	function hoffset(s)
		if #s==1 then return #s 
		else return 1.5*#s 
		end
	end
	circfill(x,y,5,c2)
	print(s,x-hoffset(s),y-2,c1)
end

function _draw()
	cls()
	spr(0,22,5,2,2)

	line(22,4,22,16,7) -- circle has width 12
	cprint("88",22,10,9,3)	
end
