-- draw

spr1=flr(rnd(3))*2
spr2=flr(rnd(3))*2
spr3=flr(rnd(3))*2
missing=flr(rnd(8))
mspr=32 -- missing sprite

function checkmissing(m,s)
end


function _draw()
	cls()
	line(0,56,127,56,14)
	line(0,72,127,72,14)
	
	for i=0,7 do
	spr(spr1,0+48*i,56,2,2)
	spr(spr2,16+48*i,56,2,2)
	spr(spr3,32+48*i,56,2,2)
	end
	rectfill(16*missing,
			56,
			16*missing+15,
			71,0) 
	spr(mspr,16*missing,56,2,2)	
end
