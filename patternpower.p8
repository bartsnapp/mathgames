function _update()
   if state=="two_d_pattern"
   then update_two_d_pattern()
   elseif state=="success"
   then update_success()
   elseif state=="fail"
   then update_fail()
   end
end

function _draw()
   if state=="two_d_pattern"
   then draw_two_d_pattern()
   elseif state=="success"
   then draw_success()
   elseif state=="fail"
   then draw_fail()
   end
end
